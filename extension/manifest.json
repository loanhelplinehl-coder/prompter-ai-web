{
  "manifest_version": 3,
  "name": "Prompter AI",
  "description": "AI Prompter Extension with Supabase Quota Management",
  "version": "1.0.0",

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
